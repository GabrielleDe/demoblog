{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

    <section class="row articles">

        {% for item in article %}
    {# item est une variable de réception : elle réceptionne un artile par tour de boucle #}
    {# article est le tableau envoyé depuis la méthode index() #}
    


            <article class="col-md-4 mx-auto text-center border border-dark mb-3 p-3 mt-3 mr-1">
                 <h2>{{ item.title }}</h2>
            {# syntaxe twig : symfony accède à la propriété title via son getter#}
             <div class="metadata">Ecrit le {{ item.createdAt |date('d/m/Y à H:i:s') }} dans la catégorie Politique</div>
            {# dte() est un filtre twig : il permet de convertir un objet DateTime en une chaîne de caractères#}
             <div class="content">
             <img src="{{ item.image }}" alt="">
            {# raw est un filtre qui permet d'interpréter les balises html#}
             {{item.content|raw}}
            <a href="{{ path('blog_show',{id: item.id}) }}" class="btn btn-primary">Lire la suite</a>

        
             {# path() permet de générer un lien vers une page#}
            {# le premier argument est le nom de la route (nam=xxx)#}
            </div>

    </article>
{% endfor %}
</section>

{% endblock %}
